    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Flask App",
            "type": "debugpy",
            "cwd": "${workspaceFolder}/backend/src",
            "request": "launch",
            "module": "flask",
            "args": [
                "--app",
                "app",
                "--debug",
                "run"
            ],
            "justMyCode": true
        },
        {
            "name": "Python: Populate DB TEST",
            "type": "debugpy",
            "cwd": "${workspaceFolder}/backend",
            "request": "launch",
            "program": "${workspaceFolder}/backend/src/create_db.py",
            "args": []
        }
    ]
}